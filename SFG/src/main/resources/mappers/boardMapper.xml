<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
 "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.SFG.board.dao.BoardDAO">
	<insert id="insertPost" parameterType="map">
		INSERT INTO `board`
		(
			`userId`,
			`userName`,
			`boardKind`,
			`title`,
			`content`,
			`createdAt`,
			`updatedAt`
		)
		value
		(
			#{userId},
			#{userName},
			#{boardKind},
			#{title},
			#{content},
			NOW(),
			NOW()
		)
	</insert>
	<select id="selectPostListByUserId" resultType="com.SFG.board.model.Board">
		SELECT
			`id`,
			`userId`,
			`userName`,
			`boardKind`,
			`title`,
			`content`,
			`views`,
			`createdAt`,
			`updatedAt`
		FROM
			`board`
		WHERE
			`userId` = #{userId}
		ORDER BY `id` DESC
	</select>
	<select id="selectBoardByBoardKind" resultType="com.SFG.board.model.Board">
		SELECT
			`id`,
			`userId`,
			`userName`,
			`boardKind`,
			`title`,
			`content`,
			`views`,
			`createdAt`,
			`updatedAt`
		FROM
			`board`
		WHERE
			`boardKind` = #{boardKind}
			<!-- 처음 진입시... -->
			<if test="direction == null">
		ORDER BY `id` DESC
			</if>
			<!-- 이전 클릭한 경우 -->
			<if test="direction == 'prev'">
			<![CDATA[
		AND `id` > #{standardId}
			]]>
		ORDER BY `id` ASC
			</if>
			<!-- 다음 클릭한 경우 -->
			<if test="direction == 'next'">
			<![CDATA[
		AND `id` < #{standardId}
			]]>
		ORDER BY `id` DESC
			</if>
		LIMIT ${limit}
	</select>
	<select id="selectPostIdByBoardKindAndSort" parameterType="map" resultType="int">
		SELECT
			`id`
		FROM
			`board`
		WHERE
			`boardKind` = #{boardKind}
		ORDER BY `id` ${sort}
		LIMIT 1
	</select>
	<select id="selectBoardByBoardId" resultType="com.SFG.board.model.Board">
		SELECT
			`id`,
			`userId`,
			`userName`,
			`boardKind`,
			`title`,
			`content`,
			`views`,
			`createdAt`,
			`updatedAt`
		FROM
			`board`
		WHERE
			`id` = #{boardId}
	</select>
	<update id="updateViews" parameterType="int">
		UPDATE `board`
		SET
			`views` = `views`+1
		WHERE
			`id` = #{boardId}
	</update>
</mapper>