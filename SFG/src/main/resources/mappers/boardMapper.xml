<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
 "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.SFG.board.dao.BoardDAO">
	<insert id="insertPost" parameterType="map">
		INSERT INTO `board`
		(
			`userId`,
			`userName`,
			`boardKind`,
			`title`,
			`content`,
			`createdAt`,
			`updatedAt`
		)
		value
		(
			#{userId},
			#{userName},
			#{boardKind},
			#{title},
			#{content},
			NOW(),
			NOW()
		)
	</insert>
	<select id="selectPostListByUserId" resultType="com.SFG.board.model.Board">
		SELECT
			`id`,
			`userId`,
			`userName`,
			`boardKind`,
			`title`,
			`content`,
			`views`,
			`createdAt`,
			`updatedAt`
		FROM
			`board`
		WHERE
			`userId` = #{userId}
		ORDER BY `id` DESC
	</select>
	<select id="selectBoardByBoardKind" resultType="com.SFG.board.model.Board">
		SELECT
			`id`,
			`userId`,
			`userName`,
			`boardKind`,
			`title`,
			`content`,
			`views`,
			`createdAt`,
			`updatedAt`
		FROM
			`board`
		WHERE
			`boardKind` = #{boardKind}
		ORDER BY `id` DESC
	</select>
	<select id="selectBoardByBoardId" resultType="com.SFG.board.model.Board">
		SELECT
			`id`,
			`userId`,
			`userName`,
			`boardKind`,
			`title`,
			`content`,
			`views`,
			`createdAt`,
			`updatedAt`
		FROM
			`board`
		WHERE
			`id` = #{boardId}
	</select>
</mapper>