<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
 "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.SFG.player.dao.PlayerDAO">
	<insert id="insertPlayer" parameterType="map">
		INSERT INTO `player`
		(
			`name`
			,`number`
			,`position`
			,`birth`
			,`debut`
			,`imagePath`
			,`createdAt`
			,`updatedAt`
		)
		VALUE
		(
			#{name}
			,#{number}
			,#{position}
			,#{birth}
			,#{debut}
			,#{imagePath}
			,now()
			,now()
		)
		
	</insert>
	<insert id="insertBatterStatByPlayerId" parameterType="map">
		INSERT INTO `batter_stat`
			(
			`playerId`,
			`year`,
			`team`,
			`games`,
			`at_bats`,
			`runs`,
			`hits`,
			`doubles`,
			`triples`,
			`homerun`,
			`runs_batted_in`,
			`bases_on_balls`,
			`strikeouts`,
			`stolen_bases`,
			`hit_by_pitch`,
			`sacrifice_flys`,
			`createdAt`,
			`updatedAt`
			)
			value
			(
			#{playerId},
			#{year},
			#{team},
			#{games},
			#{at_bats},
			#{runs},
			#{hits},
			#{doubles},
			#{triples},
			#{homerun},
			#{runs_batted_in},
			#{bases_on_balls},
			#{strikeouts},
			#{stolen_bases},
			#{hit_by_pitch},
			#{sacrifice_flys},
			now(),
			now()
			)
	</insert>
	<insert id="insertPitcherStatByPlayerId" parameterType="map">
		INSERT INTO `pitcher_stat`
			(
			`playerId`
			,`year`
			,`team`
			,`wins`
			,`losses`
			,`earned_run_average`
			,`games`
			,`game_started`
			,`saves`
			,`hold`
			,`innings_pitched`
			,`hits`
			,`earned_runs`
			,`walks`
			,`strikeouts`
			,`whip`
			)
		VALUE
			(
			#{playerId}
			,#{year}
			,#{team}
			,#{wins}
			,#{losses}
			,#{earned_run_average}
			,#{games}
			,#{game_started}
			,#{saves}
			,#{hold}
			,#{innings_pitched}
			,#{hits}
			,#{earned_runs}
			,#{walks}
			,#{strikeouts}
			,#{whip}
			)
	</insert>
	<insert id="insertPlayerIntroduce" parameterType="map">
		INSERT `player_introduce`
			(
			`playerId`
			,`title`
			,`content`
			,`imagePath`
			,`createdAt`
			,`updatedAt`
			)
		VALUE
			(
			#{playerId}
			,#{title}
			,#{content}
			,#{imagePath}
			,now()
			,now()
			)
	</insert>
	<select id="selectAllPlayerList" resultType="com.SFG.player.model.Player">
		SELECT
			`id`,
			`name`,
			`number`,
			`position`,
			`birth`,
			`debut`,
			`imagePath`,
			`createdAt`,
			`updatedAt`
		FROM
			`player`
	</select>
	<select id="selectCoachList" resultType="com.SFG.player.model.Player">
		SELECT
			`id`,
			`name`,
			`number`,
			`position`,
			`birth`,
			`debut`,
			`imagePath`,
			`createdAt`,
			`updatedAt`
		FROM
			`player`
		WHERE
			`position` like "%coach"
		
	</select>
	<select id="selectPitcherList" resultType="com.SFG.player.model.Player">
		SELECT
			`id`,
			`name`,
			`number`,
			`position`,
			`birth`,
			`debut`,
			`imagePath`,
			`createdAt`,
			`updatedAt`
		FROM
			`player`
		WHERE
			`position`="pitcher"
	</select>
	<select id="selectInfieldList" resultType="com.SFG.player.model.Player">
		SELECT
			`id`,
