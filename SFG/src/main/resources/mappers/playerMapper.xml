	</select>
	<select id="selectBatterStatListByPlayerId" resultType="com.SFG.player.model.BatterStat">
		SELECT
			`id`,
			`playerId`,
			`year`,
			`team`,
			`games`,
			`at_bats`,
			`runs`,
			`hits`,
			`doubles`,
			`triples`,
			`homerun`,
			`runs_batted_in`,
			`bases_on_balls`,
			`strikeouts`,
			`stolen_bases`,
			`hit_by_pitch`,
			`sacrifice_flys`,
			`createdAt`,
			`updatedAt`
		FROM
			`batter_stat`
		WHERE
			`playerId` = #{playerId}
	</select>
	<select id="selectAllPlayerIntroduceList" resultType="com.SFG.player.model.PlayerIntroduce">
		SELECT
			`id`,
			`playerId`,
			`title`,
			`content`,
			`imagePath`,
			`createdAt`,
			`updatedAt`
		FROM
			`player_introduce`
	</select>
	<update id="updateBatterStatById" parameterType="map">
		UPDATE `batter_stat`
		SET
			`year` = #{year},
			`team` = #{team},
			`games` = #{games},
			`at_bats` = #{at_bats},
			`runs` = #{runs},
			`hits` = #{hits},
			`doubles` = #{doubles},
			`triples` = #{triples},
			`homerun` = #{homerun},
			`runs_batted_in` = #{runs_batted_in},
			`bases_on_balls` = #{bases_on_balls},
			`strikeouts` = #{strikeouts},
			`stolen_bases` = #{stolen_bases},
			`hit_by_pitch` = #{hit_by_pitch},
			`sacrifice_flys` = #{sacrifice_flys},
			`updatedAt` = now()
		WHERE
			`id` = #{id}
	</update>
	<update id="updatePitcherStatByPlayerId" parameterType="map">
		UPDATE `pitcher_stat`
		SET
			`year` = #{year}
			,`team` = #{team}
			,`wins` = #{wins}
			,`losses` = #{losses}
			,`earned_run_average` = #{earned_run_average}
			,`games` = #{games}
			,`game_started` = #{game_started}
			,`saves` = #{saves}
			,`hold` = #{hold}
			,`innings_pitched` = #{innings_pitched}
			,`hits` = #{hits}
			,`earned_runs` = #{earned_runs}
			,`walks` = #{walks}
